@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

<ul>
  @foreach(Engineers engineers in Model)
  {
    <li>@Html.ActionLink($"{engineers.Name}", "Details", new { id = engineers.EngineersId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new engineers", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>